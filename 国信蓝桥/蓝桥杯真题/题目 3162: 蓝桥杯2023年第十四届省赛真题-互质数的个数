#include<iostream>    
using namespace std;    
typedef long long LL;    
LL a,b;    
LL mod=998244353;    
LL qmi(LL a,LL b){    
    LL res=1;    
    while(b){    
        if(b&1) res=((res%mod)*(a%mod))%mod;    
        a=((a%mod)*(a%mod))%mod;    
        b>>=1;    
        }    
        return res;    
    }    
 int main()    
    {    
        cin>>a>>b;    
        LL n=qmi(a,b);    
        LL res=n;    
        for(int i=2;i<=n/i;i++){    
            if(n%i==0){    
                while(n%i==0) n/=i;    
  
               res=(res-res/i);    
           }            }    
        if(n>1) res=(res-res/n);    
        cout<<res;    
    }
