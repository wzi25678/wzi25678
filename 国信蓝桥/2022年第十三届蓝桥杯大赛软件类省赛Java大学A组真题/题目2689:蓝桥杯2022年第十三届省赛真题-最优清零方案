import java.util.Scanner;
 
public class Main {
    private static int n,k ;
    private static int arr[];
    private static int ans;
     
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        n = sc.nextInt();
        k = sc.nextInt();
         
        if(k==2) {
            int first = n-k+1;
            int second = n-1;
            System.out.println(first + second);
        }else {
            int first = n-k+1;
            int second = 0;
            for(int i=1;i<k;i++) {
                second+=i;
            }
            System.out.println(first + second);
        }
         
        sc.close();
         
    }
 
}
