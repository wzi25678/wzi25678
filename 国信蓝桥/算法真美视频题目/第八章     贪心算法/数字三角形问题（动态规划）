#include<bits/stdc++.h>
using namespace std;
int dp[1000][1000];
int num[101][101];
int main()
{
	int n,m;
	cin>>n;
	for(int i=1;i<=n;i++)
	{
		for(int j=1;j<=i;j++)
		{
			cin>>num[i][j];
			dp[i][j]=num[i][j];
		}
	}
	for(int i=n-1;i>=1;i--)
	{
		for(int j=1;j<=i;j++)
		{
			dp[i][j]+=max(dp[i+1][j],dp[i+1][j+1]);
		}
	}
	cout<<dp[1][1];
	return 0;
}
